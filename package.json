{
  "private": true,
  "name": "colorcove",
  "version": "1.0.0",
  "scripts": {
    "build": "lerna run build --parallel",
    "dev": "lerna run dev --parallel",
    "build-studio": "lerna bootstrap && (cd studio && npm run build)",
    "build-web": "lerna bootstrap && (cd web && npm run build)",
    "graphql-deploy": "lerna run graphql-deploy",
    "postinstall": "lerna bootstrap",
    "generate-graphql-types": "lerna run generate-graphql-types",
    "lint": "lerna run lint",
    "storybook": "NODE_ENV=production start-storybook -s static",
    "build-storybook": "NODE_ENV=production build-storybook -s static"
  },
  "workspaces": [
    "web",
    "studio"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@sanity/cli": "^0.142.2",
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-typescript-to-proptypes": "^0.17.1",
    "@babel/core": "^7.6.0",
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-centered": "^5.1.11",
    "@storybook/addon-info": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addon-viewport": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@types/storybook__react": "^4.0.2"
  }
}
